<Page 
    x:Class="MeiTuTieTie.Pages.WidgetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MeiTuTieTie.Controls" 
    xmlns:util="using:Shared.Utility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ControlTemplate x:Name="widgetPivotItemTemplate" TargetType="PivotItem">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapGrid Orientation="Horizontal" HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="{StaticResource MaterialWidth}" Height="{StaticResource MaterialWidth}">
                                <Image Stretch="Uniform"
                                       util:IsoImg.Path="{Binding image}" Margin="12"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </ControlTemplate>
    </Page.Resources>

    <Grid x:Name="rootGrid" Background="White">
        <Pivot>
            <Pivot.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding}" Foreground="Black" FontSize="24"/>
                    </Grid>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <PivotItem Template="{StaticResource widgetPivotItemTemplate}" Loaded="PivotItem_Loaded" Header="可爱" Tag="keai"/>
            <PivotItem Template="{StaticResource widgetPivotItemTemplate}" Loaded="PivotItem_Loaded" Header="文字模板" Tag="wenzi"/>
            <PivotItem Template="{StaticResource widgetPivotItemTemplate}" Loaded="PivotItem_Loaded" Header="搞笑表情" Tag="gaoxiaobiaoqing"/>
            <PivotItem Template="{StaticResource widgetPivotItemTemplate}" Loaded="PivotItem_Loaded" Header="遮挡物" Tag="zhedang"/>
            <PivotItem Template="{StaticResource widgetPivotItemTemplate}" Loaded="PivotItem_Loaded" Header="卡通形象" Tag="katongxingxiang"/>
        </Pivot>
    </Grid>

</Page>
