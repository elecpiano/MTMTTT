<Page
    x:Class="MeiTuTieTie.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sharedControl="using:Shared.Control"
    mc:Ignorable="d">
    
    <Page.Resources>

    </Page.Resources>

    <Grid Background="Wheat">
        <!--buttons-->
        <Grid x:Name="buttonsPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Gray" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <CompositeTransform/>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Content="单张贴图" Width="120" Height="120" Margin="20" Background="SkyBlue" Click="singlePic_Click"/>
            <Button Grid.Row="0" Grid.Column="1" Content="多张拼图" Width="120" Height="120" Margin="20" Background="Orange" Click="multiPic_Click"/>
            <Button Grid.Row="1" Grid.Column="0" Content="精品屋" Width="120" Height="120" Margin="20" Background="Salmon" Click="boutique_Click"/>
            <Button Grid.Row="1" Grid.Column="1" Content="更多功能" Width="120" Height="120" Margin="20" Background="SeaGreen" Click="more_Click"/>
        </Grid>

        <!--<sharedControl:ImageSwitch x:Name="imageSwitch" VerticalAlignment="Bottom"
                                   CheckStateChanged="ImageSwitch_CheckStateChanged"
                                   Enabled="True"/>-->

        <sharedControl:SpriteTextBox x:Name="spriteTextBox" RenderTransformOrigin="0.5,0.5" >
            <sharedControl:SpriteTextBox.RenderTransform>
                <CompositeTransform Rotation="-12"/>
            </sharedControl:SpriteTextBox.RenderTransform>
        </sharedControl:SpriteTextBox>

    </Grid>
</Page>
