    <Style x:Key="PageTitlePanel_Style" TargetType="Grid">
        <Setter Property="Height" Value="60"/>
    </Style>

    <Style x:Key="PageTitle_Style" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBase}">
